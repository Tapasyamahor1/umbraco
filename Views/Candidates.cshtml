@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.Candidates>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = "Master.cshtml";


}
	<!-- Main container -->
		<div class="container">

			
			<!-- Blog Post Query goes here. -->
			

@{
	var selection = Umbraco.Content(Guid.Parse("eb693c7a-b3b6-4c47-98df-d8bb2d701da2"))


    .ChildrenOfType("candidateJobApplicationForm")
    .Where(x => x.IsVisible());
}
    <ul class="card-list">
        @foreach (var item in selection)
        {
            <li class="card">
                <div class="card-header">
                    <h3> @item.Value("FirstName") @item.Value("lastName")</h3>
                </div>
                <div class="card-body">
                    <p>Email: @item.Value("email")</p>
                    <p>First Name: @item.Value("FirstName")</p>
                    @if (!string.IsNullOrEmpty(item.Value<string>("Resume")))
                    {
                        <a href="@item.Value("Resume")" download>Download Resume</a>
                    }
                </div>
                <div class="card-footer">
                    <a href="@item.Url()">Proceed</a>
                </div>
            </li>
        }
    </ul>
</ul>

