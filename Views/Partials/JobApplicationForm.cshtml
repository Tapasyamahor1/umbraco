@using MyProject.Controllers;
@model MyProject.Model.CandidateJobApplicationFormViewModel
<style>

    /* Styles for the form container */
    .zoho-form-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 30px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f9f9f9;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        /* Styles for the form heading */
        .zoho-form-container h2 {
            margin-bottom: 20px;
            font-size: 24px;
            color: #333;
        }

        /* Styles for individual form fields */
        .zoho-form-container .zoho-form-field {
            margin-bottom: 15px;
        }

            .zoho-form-container .zoho-form-field label {
                display: block;
                font-weight: bold;
                margin-bottom: 5px;
                color: #555;
            }

            .zoho-form-container .zoho-form-field input[type="text"],
            .zoho-form-container .zoho-form-field input[type="email"],
            .zoho-form-container .zoho-form-field input[type="tel"],
            .zoho-form-container .zoho-form-field input[type="file"],
            .zoho-form-container .zoho-form-field textarea {
                width: 100%;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 3px;
                background-color: #fff;
                color: #333;
                font-size: 14px;
            }

            .zoho-form-container .zoho-form-field input[type="file"] {
                padding: 8px;
            }

            .zoho-form-container .zoho-form-field textarea {
                height: 150px;
                resize: vertical;
            }

            .zoho-form-container .zoho-form-field button[type="submit"] {
                padding: 12px 20px;
                background-color: #007bff;
                color: #fff;
                border: none;
                border-radius: 3px;
                cursor: pointer;
                font-size: 16px;
            }

                .zoho-form-container .zoho-form-field button[type="submit"]:hover {
                    background-color: #0056b3;
                }



</style>

@using (Html.BeginUmbracoForm<CandidateJobApplicationController>(nameof(CandidateJobApplicationController.Submit)))
{
    <div class="zoho-form-container">
        <h2>User Submission Form</h2>

        <div class="zoho-form-field">
            <label for="firstName">First Name:</label>
            <input type="text" id="firstName" name="FirstName" required>
        </div>

        <div class="zoho-form-field">
            <label for="lastName">Last Name:</label>
            <input type="text" id="lastName" name="LastName" required maxlength="50">
        </div>

        <div class="zoho-form-field">
            <label for="email">Email:</label>
            <input type="email" id="email" name="Email" required>
        </div>

        <div class="zoho-form-field">
            <label for="phone">Phone:</label>
            <input type="tel" id="phone" name="Phone" required>
        </div>

        <div class="zoho-form-field">
            <label for="JobTitle">Job Title:</label>
            <input type="text" id="JobTitle" name="JobTitle" required>
        </div>

        <div class="zoho-form-field">
            <label for="resumeFile">Resume File:</label>
            <input type="file" id="resumeFile" name="ResumeFile" required>
        </div>

        <div class="zoho-form-field">
            <label for="coverLetter">Cover Letter:</label>
            <textarea id="coverLetter" name="CoverLetter"></textarea>
        </div>

        <div class="zoho-form-field">
            <button type="submit">Submit</button>
        </div>

    </div>

    }